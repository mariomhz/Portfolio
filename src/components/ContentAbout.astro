---
import { Code } from 'astro:components';

const code = `interface Developer {
    name: string;
    skills: string[];
    interests: string[];
};

interface TechStack {
    devOps: string[];
    backend: string[];
   frontend: string[];
};

type ContactType = 'github' | 'twitter' | 'linkedIn' | 'xing' | 'email';

const techStack: TechStack = {
    devOps: [
        'GitHub'
    ],
    frontend: [
        'JavaScript',
        'TypeScript',
        'TailwindCSS',
        'Astro',
        'React',
        'WordPress',
        'Shopify'
    ],
    backend: [
        'Node.js',
        'MySQL',
    ]
};

// Developer profile
const me: Developer = {
    name: 'Mario Hernandez',
    skills: [
        ...techStack.devOps,
        ...techStack.backend,
        ...techStack.frontend
    ],
    interests: [
        "Web Design",
        "User Experience (UX)",
        "Visual Communication",
        "Interface Design",
        "Interaction Design",
        "Accessibility",
        "Open Source",
        "Performance",
        "Digital Forensics",
        "Penetration Testing",
        "Security",
        "Privacy",
        "Networking"
    ],
    available in: [
        'English/ASL',
        'Spanish',
        'Portuguese',
        'Italian',
        'Catalan',
        'French',
        'Norwegian'
    ]
};

// Contact function
const contact = (type: ContactType): string => {
    switch (type) {
        case 'github':
            return 'https://github.com/mariomhz';
        case 'linkedIn':
            return 'https://www.linkedin.com/in/josemariohernandez/';
        case 'email':
            return 'hi@devidev.io';
        default:
            return 'Send fax.';
    }
};

`;
---

<Code
    code={code}
    lang="js"
    wrap={true}
/>

<style is:global>

    /* Custom styling for code block line numbers */
    pre.astro-code {
        @apply bg-transparent !important;
    }

    pre.astro-code code {
        @apply block;
        counter-reset: step;
        counter-increment: step 0;
    }

    pre.astro-code code .line {
        @apply relative;
    }

    pre.astro-code code .line::before {
        content: counter(step);
        counter-increment: step;
        @apply text-gray-600 pr-2;
    }

</style>