---
import { Picture } from 'astro:assets';
import ProfilePicture from '../assets/profile.png';

const profile = {
    name: 'Mario',
    title: 'Full Stack Development and Cybersecurity Student',
    location: 'Canary Islands, Spain',
    description: 'Hi, I\'m Mario! I\'m a 24 y.o. full-stack development and cybersecurity student with a passion for building secure, scalable digital solutions. As a polyglot fluent in seven languages and shaped by a rich cultural background, I’ve learned to approach challenges with creativity, empathy, and a global mindset. Driven by my endless curiosity, continuous learning, and a love for technology, I’m always eager to connect and collaborate.'
};
---

<div class="flex flex-col gap-6 items-center text-center sm:items-start sm:text-left">

    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">

        <Picture
            src={ProfilePicture}
            formats={['webp']}
            width={96}
            height={96}
            alt={'Profile picture ' + profile.name}
            title={profile.name}
            class="w-35 h-35 rounded-xl object-cover border-2 border-primary mx-auto sm:mx-0"
        />

        <div>

            <h1 class="text-2xl font-extrabold mb-1 inline-block relative text-text-primary">
                {profile.name}
            </h1>

            <p class="text-sm mb-2 text-primary">
                {profile.title}
            </p>

            <p class="flex items-center justify-center sm:justify-start text-sm text-gray-400">
                <svg class="-mt-0.5 inline mr-2"fill=none height=14 stroke=currentColor stroke-linecap=round stroke-linejoin=round stroke-width=2 viewBox="0 0 24 24"width=14 xmlns=http://www.w3.org/2000/svg><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx=12 cy=10 r=3></circle></svg>
                {profile.location}
            </p>

        </div>

    </div>

    <p class="text-sm leading-relaxed mt-4 text-gray-400">
        {profile.description}
    </p>

</div>